{
  "compilerOptions": {
    "target": "ES2020",                   // modern JS
    "module": "ESNext",                    // Node ESM compatible
    "moduleResolution": "node",            // Node.js module resolution for production builds
    "outDir": "dist",                      // compiled files go here
    "rootDir": ".",                         // project root
    "strict": true,                         // enable strict type checks
    "esModuleInterop": true,                // allow CJS imports
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,              // allow importing JSON
    "skipLibCheck": true,                   // skip type checks in node_modules
    "allowJs": true,                         // allow JS files
    "noEmit": false,                         // emit compiled files for production
    "baseUrl": ".",                          // base path for paths
    "paths": {
      "@shared/*": ["shared/*"],             // alias for shared folder
      "@shared/schema": ["shared/schema.ts"],   // explicit TypeScript mapping
      "../vite.config": ["vite.config.ts"],   // help resolve vite config import from server
      "../vite.config.ts": ["vite.config.ts"]   // explicit .ts mapping
    }
  },
  "include": [
    "server/**/*",
    "shared/**/*",
    "types/**/*",
    "vite.config.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
