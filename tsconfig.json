{
  "compilerOptions": {
    "target": "ES2020",
    "module": "Node16",
    "outDir": "dist",
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node16",
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@shared/*": ["shared/*"]
    }
  },
  "include": [
    "server/**/*",
    "shared/**/*",
    "vite.config.ts",
    "types/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
